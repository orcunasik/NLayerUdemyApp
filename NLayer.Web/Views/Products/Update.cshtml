@model ProductDto
@{
    ViewData["Title"] = "Update";
}

<h3>Ürün Güncelle</h3>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Update" asp-controller="Products" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select">
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-outline-success" />
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-info">Geri Dön</a>
            </div>
        </form>
    </div>
</div>


